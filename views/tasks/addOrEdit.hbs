<h3>
    {{viewTitle}}
</h3>

<form action='/addTask' method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{task._id}}">
    <div class="form-group">
        <label>New Task</label>
        <input type="text" class="form-control" name="taskDescription" placeholder="Task description"
            value="{{task.taskDescription}}">
        <div class="text-danger">
            {{task.taskDescriptionError}}
        </div>
    </div>

    <div class="form-group">
        <label>Deadline</label>
        <input type="text" class="form-control" name="deadline" placeholder="Deadline" value="{{task.deadline}}">
        <div class="text-danger">
            {{task.deadlineError}}
        </div>
    </div>

